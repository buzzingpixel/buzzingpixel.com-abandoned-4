{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 10000,
            "pathMappings": {
                "/opt/project": "${workspaceRoot}"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "xdebugSettings": {
                "show_hidden": 1
            },
        },
    ]
}
