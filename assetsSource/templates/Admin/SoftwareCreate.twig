{% extends 'Admin/_AdminLayout.twig' %}

{% set message = flash('PostMessage') %}
{% if message[0] is defined %}
    {% set message = message[0] %}
{% endif %}

{% import "StandardForm/Macros/StandardFormInputs.twig" as inputs %}

{% block adminContent %}
    {% embed 'StandardForm/StandardFormEmbed.twig' with {
        heading: 'Create New Software',
        message: message,
        submitButtonContent: 'Create',
    } only %}
        {% block standardFormContent %}
            {% import "StandardForm/Macros/StandardFormInputs.twig" as inputs %}
            {{ inputs.textInput('Name', 'name', '', message) }}
            {{ inputs.textInput('Slug', 'slug', '', message) }}
            {{ inputs.checkbox('For Sale?', 'for_sale', false, message) }}
            {{ inputs.textInput('Price', 'price', '0', message) }}
            {{ inputs.textInput('Renewal Price', 'renewal_price', '0', message) }}
            {{ inputs.checkbox('Subscription?', 'subscription', false, message) }}
            {{ inputs.textInput('Initial Major Version', 'major_version', '', message) }}
            {{ inputs.textInput('Initial Version', 'version', '', message) }}
            {{ inputs.fileChoser('File Download', 'download_file', '', message) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
