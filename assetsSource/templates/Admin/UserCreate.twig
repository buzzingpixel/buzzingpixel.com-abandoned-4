{% extends 'Admin/_AdminLayout.twig' %}

{% set message = flash('PostMessage') %}
{% if message[0] is defined %}
    {% set message = message[0] %}
{% endif %}

{% block adminContent %}
    {% embed 'StandardForm/StandardFormEmbed.twig' with {
        heading: 'Create New User',
        message: message,
        submitButtonContent: 'Create',
    } only %}
        {% block standardFormContent %}
            {% import "StandardForm/Macros/StandardFormInputs.twig" as inputs %}
            {{ inputs.checkbox('Admin?', 'is_admin', false, message) }}
            {{ inputs.textInput('Email', 'email_address', '', message, 'email') }}
            {{ inputs.textInput('Password', 'password', '', message, 'password') }}
            {{ inputs.textInput('First Name', 'first_name', '', message) }}
            {{ inputs.textInput('Last Name', 'last_name', '', message) }}
            {{ inputs.textInput('Display Name', 'display_name', '', message) }}
            {{ inputs.textInput('Billing Name', 'billing_name', '', message) }}
            {{ inputs.textInput('Billing Company', 'billing_company', '', message) }}
            {{ inputs.textInput('Billing Phone', 'billing_phone', '', message) }}
            {{ inputs.textInput('Billing Address', 'billing_address', '', message) }}
            {{ inputs.countryChooser('Billing Country', 'billing_country', 'US', message) }}
            {{ inputs.textInput('Billing Postal Code', 'billing_phone', '', message) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
