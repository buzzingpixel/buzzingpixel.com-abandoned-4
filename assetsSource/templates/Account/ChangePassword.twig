{% do requireVariables({
    user: 'App\\Users\\Models\\UserModel',
}) %}

{# @var \App\Users\Models\UserModel user #}

{% extends 'Account/_AccountLayout.twig' %}

{% block accountContent %}
    {% embed 'StandardForm/StandardFormEmbed.twig' with {
        heading: 'Change your password (' ~ user.emailAddress ~ ')',
        submitButtonContent: 'Submit',
        user: user,
    } only %}
        {% block standardFormContent %}
            {% import "StandardForm/Macros/StandardFormInputs.twig" as inputs %}
            {{ inputs.textInput(
                'Existing Password',
                'password',
                '',
                message,
                'password'
            ) }}
            {{ inputs.textInput(
                'New Password',
                'new_password',
                '',
                message,
                'password'
            ) }}
            {{ inputs.textInput(
                'Confirm New Password',
                'confirm_new_password',
                '',
                message,
                'password'
            ) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
