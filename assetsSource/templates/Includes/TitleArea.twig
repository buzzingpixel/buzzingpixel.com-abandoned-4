{% do requireVariables({
    title: 'string',
    subTitle: 'string',
    actionButtons: 'array',
}) %}

{# @var string title #}
{# @var string subTitle #}
{# @var \App\Content\Modules\Payloads\CtaPayload[] actionButtons #}

<div class="TitleArea">
    <div class="TitleArea__Inner">
        <h1 class="heading heading--level-1">
            {{ title|smartypants|widont }}
            {% if subTitle %}
                <small class="TitleArea__Small">
                    {{ subTitle|smartypants|widont }}
                </small>
            {% endif %}
        </h1>
        {% if actionButtons|length %}
            <div class="TitleArea__ActionButtons">
                {% for button in actionButtons %}
                    <a
                        href="{{ button.getHref() }}"
                        class="button TitleArea__ActionButton{% if loop.last %}  button--light{% else %} button--colored{% endif %}"
                    >
                        {{ button.getContent()|smartypants|widont }}
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
