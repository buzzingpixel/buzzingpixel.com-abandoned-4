{# @var \App\Content\Modules\Payloads\SimpleTextInterrupterPayload payload #}

{% set headingClasses = [
    'font-bold',
    'text-2xl',
    'md:text-3xl',
    'lg:text-4xl',
    'leading-tight',
] %}

{% if payload.subHeadline %}
    {% set headingClasses = headingClasses|merge([
        'mb-4',
    ]) %}
{% endif %}

{% set subHeadingClasses = [
    'italic',
    'text-lg',
    'md:text-2xl',
    'leading-snug',
] %}

{% if payload.textColor %}
    {% set headingClasses = headingClasses|merge([
        'text-' ~ payload.textColor,
    ]) %}

    {% set subHeadingClasses = subHeadingClasses|merge([
        'text-' ~ payload.textColor,
    ]) %}
{% endif %}

<section
    class="text-center py-6 px-4 md:py-10{% if payload.backgroundColor %} bg-{{ payload.backgroundColor }}{% endif %}"
>
    <div class="max-w-screen-lg mx-auto">
        {% if payload.headline %}
            {% if payload.isH1 %}
                <h1 class="{{ headingClasses|join(' ') }}">
                    {{ payload.headline|smartypants|widont }}
                </h1>
            {% else %}
                <h2 class="{{ headingClasses|join(' ') }}">
                    {{ payload.headline|smartypants|widont }}
                </h2>
            {% endif %}
        {% endif %}
        {% if payload.subHeadline %}
            {% if payload.isH1 %}
                <h2 class="{{ subHeadingClasses|join(' ') }}">
                    {{ payload.subHeadline|smartypants|widont }}
                </h2>
            {% else %}
                <h3 class="{{ subHeadingClasses|join(' ') }}">
                    {{ payload.subHeadline|smartypants|widont }}
                </h3>
            {% endif %}
        {% endif %}
    </div>
</section>
